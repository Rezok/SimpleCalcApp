<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_number_EditText"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:focusable="false"
        android:gravity="right"
        android:hint="1234"
        android:paddingTop="30dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_TextView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="end|bottom"
        android:paddingBottom="30dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/number_buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_TextView">

        <Button
            android:id="@+id/clear_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@drawable/round_button"
            android:text="C"
            android:textColor="#D55843"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/bracket_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="()"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"
            android:textColor="@color/green"/>

        <Button
            android:id="@+id/percent_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="%"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"
            android:textColor="@color/green"/>

        <Button
            android:id="@+id/division_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="/"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"
            android:textColor="@color/green"/>

        <Button
            android:id="@+id/seven_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="7"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/eight_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="8"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/nine_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="9"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/multiply_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="X"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"
            android:textColor="@color/green"/>

        <Button
            android:id="@+id/four_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="4"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/five_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="5"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/six_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="6"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/minus_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="-"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"
            android:textColor="@color/green"/>

        <Button
            android:id="@+id/one_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="1"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/two_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="2"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/three_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="3"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/plus_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="+"
            android:textColor="@color/green"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/inversion_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="+/-"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/zero_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="0"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/comma_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text=","
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>

        <Button
            android:id="@+id/result_Button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="="
            android:backgroundTint="@color/green"
            android:background="@drawable/round_button"
            style="@style/buttonTextStyle"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>